@model Thera.Talent.Management.Web.Models.Talent

@{
    ViewBag.Title = "Deletar talento";
}

<h2>Deletar</h2>

<h3>Você tem certeza que quer deletar este registro?</h3>
<div>
    <h4>Talento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PathFile)
        </dt>

        <dd>
            @Html.ActionLink("Download", "DownloadFile", new { @path = Model.PathFile }, new { @target = "_blank" })
        </dd>

    </dl>

    <span class="text-bg-danger">@ViewData["Error"]</span>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-danger" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
